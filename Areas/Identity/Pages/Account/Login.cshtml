<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 5">
  <div class="toast fade" id="errorToast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header bg-danger text-white"><strong class="me-auto">Error</strong>
      <div data-bs-theme="dark"><button class="btn-close" type="button" data-bs-dismiss="toast" aria-label="Close"></button></div>
    </div>
    <div class="toast-body" id="toastBody">Hello, world! This is a toast message.</div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            var $validationSummary = $("#validationSummary");
            var $toastBody = $("#toastBody");
            var $errorToast = $("#errorToast");

            // Check if validation summary has errors
            if ($validationSummary.text().trim() !== "") {
                // Copy errors into toast body
                $toastBody.html($validationSummary.html());

                // Show Bootstrap toast
                var toast = new bootstrap.Toast($errorToast[0]);
                toast.show();
            }
        });
    </script>

}
