@model lms_test1.Models.ViewModels.Subject.SubjectDetails

@{
    ViewData["Title"] = "Details";
}

<header>
    <div class="breadcrumbs">
        <a asp-area="" asp-controller="Subject" asp-action="Index">Subject Management</a> > <a href="#0/">@ViewData["Title"]</a>
    </div>
    <h2 class="title">@ViewData["Title"] - @Model.Subject.Name</h2>
</header>

<style>
    .prevent-overflow.px-8>*>* {
        margin-bottom: 1rem;
    }
    .prevent-overflow.px-8>* {
        margin-bottom: 1rem;
    }
</style>
<div class="prevent-overflow px-8">
    <div>
        <a asp-action="Index">Back to List</a> |
        <a asp-action="Edit" asp-route-id="@Model.Subject.Id">Edit</a>
    </div>
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-3"><strong>@Html.DisplayNameFor(model => model.Subject.Name)</strong></div>
        <div class="pure-u-1 pure-u-md-2-3">@Html.DisplayFor(model => model.Subject.Name)</div>

        <div class="pure-u-1 pure-u-md-1-3"><strong>@Html.DisplayNameFor(model => model.Subject.Track)</strong></div>
        <div class="pure-u-1 pure-u-md-2-3">@Html.DisplayFor(model => model.Subject.Track)</div>

        <div class="pure-u-1 pure-u-md-12-24">
            <strong >Teachers for this Subject:</strong>
            <table style="margin-top: 1rem;" class="pure-table">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Teachers.Count == 0)
                    {
                        <tr>
                            <td colspan="2">No teachers assigned to this subject.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var teacher in Model.Teachers)
                        {
                            <tr>
                                <td>@teacher.LastName , @teacher.FirstName @teacher.MiddleName</td>
                                <td>
                                    <a asp-controller="Teachers" asp-action="Details" asp-route-id="@teacher.Id">Details</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="pure-u-1 pure-u-md-12-24">
            <strong >Sections offering this Subject:</strong>
            <table style="margin-top: 1rem;" class="pure-table">
                <thead>
                    <tr>
                        <th>Section Name</th>
                        <th>Year Level</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Sections.Count == 0)
                    {
                        <tr>
                            <td colspan="4">No sections are currently offering this subject.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var Section in Model.Sections)
                        {
                            <tr>
                                <td>@Section.Name</td>
                                <td>@Section.YearLevel</td>
                                <td>
                                    <a asp-controller="Sections" asp-action="Details" asp-route-id="@Section.Id">Details</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
