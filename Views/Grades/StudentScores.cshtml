    <table class="pure-table">
        <thead>
            <tr>
                <th></th>
                @if(wwcount == 0) { <th>No Written Works</th> }
                else
                {
                    @if(Model.TeacherSubject.WW1_First != 0) { <th>@Model.TeacherSubject.WW1_First</th> }
