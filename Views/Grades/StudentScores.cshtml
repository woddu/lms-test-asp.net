@model lms_test1.Models.ViewModels.Grade.StudentScoresViewModel

@{
    ViewData["Title"] = "Scores of " + Model.Student.LastName + ", " + Model.Student.FirstName;
    int wwcount = 0;
    int ptcount = 0;

    if(Model.TeacherSubject.WW1_First != 0) wwcount++;
    if(Model.TeacherSubject.WW2_First != 0) wwcount++;
    if(Model.TeacherSubject.WW3_First != 0) wwcount++;
    if(Model.TeacherSubject.WW4_First != 0) wwcount++;
    if(Model.TeacherSubject.WW5_First != 0) wwcount++;
    if(Model.TeacherSubject.WW6_First != 0) wwcount++;
    if(Model.TeacherSubject.WW7_First != 0) wwcount++;
    if(Model.TeacherSubject.WW8_First != 0) wwcount++;
    if(Model.TeacherSubject.WW9_First != 0) wwcount++;
    if(Model.TeacherSubject.WW10_First != 0) wwcount++;

    if(Model.TeacherSubject.PT1_First != 0) ptcount++;
    if(Model.TeacherSubject.PT2_First != 0) ptcount++;
    if(Model.TeacherSubject.PT3_First != 0) ptcount++;
    if(Model.TeacherSubject.PT4_First != 0) ptcount++;
    if(Model.TeacherSubject.PT5_First != 0) ptcount++;
    if(Model.TeacherSubject.PT6_First != 0) ptcount++;
    if(Model.TeacherSubject.PT7_First != 0) ptcount++;
    if(Model.TeacherSubject.PT8_First != 0) ptcount++;
    if(Model.TeacherSubject.PT9_First != 0) ptcount++;
    if(Model.TeacherSubject.PT10_First != 0) ptcount++;

}

<header>
    <div class="breadcrumbs mx-auto">
        <a asp-controller="Grades" asp-action="Index">My Subjects</a> >
        <a asp-controller="Grades" asp-action="SubjectDetails" asp-route-teacherSubjectId="@Model.TeacherSubject.Id">
            @Model.TeacherSubject.Subject.Name Details 
        </a> >
        <a asp-controller="Grades" asp-action="SectionStudents" asp-route-teacherSubjectId="@Model.TeacherSubject.Id" asp-route-sectionId="@Model.TeacherSubject.TeacherSubjectSections.First().Section.Id">
            Students in @Model.TeacherSubject.TeacherSubjectSections.First().Section.Name  
        </a> >
        <span>@ViewData["Title"]</span>
    </div>

    <h2 class="title">@ViewData["Title"] in @Model.TeacherSubject.Subject.Name</h2>

</header>

