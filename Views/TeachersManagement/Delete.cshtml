@model lms_test1.Models.ViewModels.TeachersManagement.LMSUserDetailViewModel

@{
    ViewData["Title"] = "Delete";
}

<header>
    <div class="breadcrumbs">
        <a asp-area="" asp-controller="Teachers" asp-action="Index">Teacher Management</a> > <a
            href="#0/">@ViewData["Title"]</a>
    </div>

    <h2 class="title">@ViewData["Title"] - @Model.LastName, @Model.FirstName</h2>
</header>

<style>
    .prevent-overflow.px-8>*>* {
        margin-bottom: 1rem;
    }

    .prevent-overflow.px-8>* {
        margin-bottom: 1rem;
    }

    .button-error {
        background: rgb(202, 60, 60);
        color: white;
        /* this is a maroon */
    }
</style>
<div class="prevent-overflow px-8">
    <a asp-action="Index">Back to List</a>
    <hr />
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.Verified)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.Verified)
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.LastName)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.LastName)
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.MiddleName)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.MiddleName)
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.FirstName)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.FirstName)
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.AdvisorySection)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @(Model.AdvisorySection?.Id != null ? Html.DisplayFor(model => model.AdvisorySection.Id) : "")
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.UserName)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.UserName)
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.Email)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="pure-button button-error" />
    </form>
</div>