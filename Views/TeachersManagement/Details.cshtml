@model lms_test1.Models.ViewModels.TeachersManagement.LMSUserDetailViewModel

@{
    ViewData["Title"] = "Details";
}


<header>
    <div class="breadcrumbs">
        <a asp-area="" asp-controller="TeachersManagement" asp-action="Index">Teacher Management</a> > <a
            href="#0/">@ViewData["Title"]</a>
    </div>

    <h2 class="title">@ViewData["Title"] - @Model.LastName, @Model.FirstName</h2>
</header>

<style>
    .prevent-overflow.px-8>*>* {
        margin-bottom: 1rem;
    }

    .prevent-overflow.px-8>* {
        margin-bottom: 1rem;
    }
</style>
<div class="prevent-overflow px-8">
    <div>
        <a asp-action="Index">Back to List</a> |
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Assign" asp-route-id="@Model?.Id">Assign</a>
    </div>
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.Verified)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.Verified)
        </div>

        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.LastName)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.LastName)
        </div>

        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.MiddleName)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.MiddleName)
        </div>

        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.FirstName)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.FirstName)
        </div>

        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.UserName)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.UserName)
        </div>

        <div class="pure-u-1 pure-u-md-1-3">
            <strong>@Html.DisplayNameFor(model => model.Email)</strong>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            @Html.DisplayFor(model => model.Email)
        </div>

        <div class="pure-u-1 pure-u-md-12-24">
            <strong>@Html.DisplayNameFor(model => model.AdvisorySections)</strong>
            @if (Model!.AdvisorySections != null && Model.AdvisorySections.Any())
            {
                <table style="margin-top: 1rem;" class="pure-table">
                    <thead>
                        <tr>
                            <th>Section</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Section in Model.AdvisorySections)
                        {
                            <tr>
                                <td>@Section.Name</td>
                                <td>
                                    <a asp-controller="Sections" asp-action="Details" asp-route-id="@Section.Id">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <em>No advisory sections assigned</em>
            }
        </div>
        <div class="pure-u-1 pure-u-md-12-24">
            <strong>Subjects</strong>

            @if (Model.TeacherSubjects.Any())
            {
                <table style="margin-top: 1rem;" class="pure-table">

                    <thead>
                        <tr>
                            <th>Subject</th>
                            <th>Sections</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ts in Model.TeacherSubjects)
                        {
                            <tr>
                                <td>
                                    <strong>@ts.SubjectName</strong>
                                </td>
                                <td>
                                    @if (ts.SectionNames.Any())
                                    {
                                        @foreach (var sec in ts.SectionNames)
                                        {
                                            @sec<br />
                                        }
                                    }
                                    else
                                    {
                                    <td>No sections assigned</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p><em>No subjects assigned</em></p>
            }
        </div>
    </div>
</div>