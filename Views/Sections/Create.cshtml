@model lms_test1.Models.Section

@{
    ViewData["Title"] = "Create Section";
}

<header>
    <div class="breadcrumbs">
        <a asp-area="" asp-controller="Sections" asp-action="Index">Section Management</a> > <a href="#0/">@ViewData["Title"]</a>
    </div>
    <h2 class="title font-bold text-2xl">@ViewData["Title"]</h2>
</header>

<div class="prevent-overflow px-8">
    <form class="pure-form pure-form-stacked" asp-action="Create">
        <fieldset>
            <legend>
                <a asp-action="Index">Back to List</a>
            </legend>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-1-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="pure-u-23-24" required/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="pure-u-1 pure-u-md-1-3">
                    <label asp-for="Strand"></label>
                    <select asp-for="Strand" class="pure-u-23-24" required>
                        @foreach (var strand in (IEnumerable<string>)ViewData["Strands"])
                        {
                            <option value="@strand" >@strand</option>
                        }
                    </select>
                    <span asp-validation-for="Strand" class="text-danger"></span>
                </div>
                <div class="pure-u-1 pure-u-md-1-3">
                    <label asp-for="YearLevel">Grade Level</label>
                    <input asp-for="YearLevel" min="7" max="12" class="pure-u-23-24" required/>
                    <span asp-validation-for="YearLevel" class="text-danger"></span>
                </div>
            </div>
            <div class="pure-u-1" style="margin-top: 1rem;">
                <input type="submit" value="Create" class="pure-button pure-button-primary" />
            </div>
        </fieldset>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
