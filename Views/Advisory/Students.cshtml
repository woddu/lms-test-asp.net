  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Advisory" asp-action="Index">Advisories</a></li>
    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
  </ol>
</nav>

<div class="row g-0">
    <div class="col-xxl-9 col-md-12">
        <div class="card z-1">
        
            <div class="card-header">
                <div class="row flex-between-center">
                    <div class="col-6 col-sm-auto d-flex align-items-center pe-0">
                        <form>
                            <div class="input-group">
                                <input id="searchBox" class="form-control form-control-sm shadow-none" type="search" placeholder="Search..." aria-label="search" />
                                <div class="input-group-text bg-transparent"><span class="fa fa-search fs-10 text-600"></span></div>
                            </div>
                        </form>
                    </div>
                    <div class="col-6 col-sm-auto ms-auto text-end ps-0">                    
                        <div id="table-purchases-replace-element">
                            <a asp-action="Create" class="btn btn-falcon-default btn-sm" type="button">
                                <span class="ms-1 fas fa-plus" data-fa-transform="shrink-2"></span>
                                <span class="d-none d-sm-inline-block ms-1">New</span>
                            </a>                            
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card-body px-0 py-0">
                <div class="table-responsive scrollbar">
                    <table class="table table-sm fs-10 mb-0 overflow-hidden">
                        <thead class="bg-200">
                            <tr>                        
                                <th class="text-900 pe-1 align-middle white-space-nowrap">
                                    Full Name
                                </th>
                                @if (Model.Section.TeacherSubjectSections!.Any())
                                {
                                    foreach (var subject in Model.Section.TeacherSubjectSections!.Select(tss =>
                                    tss.TeacherSubject.Subject).Distinct())
                                    {
                                        <th class="text-900 pe-1 align-middle white-space-nowrap text-center" >@subject.Name</th>
                                    }
                                }                   
                                <th class="no-sort pe-1 align-middle data-table-row-action"></th>
                            </tr>
                        </thead>

                        <tbody class="list" id="table-students-body">
                            @if (Model.Students.Where(s => s.Gender == 'M').ToList().Count() > 0)
                            {
                                <tr style="border-bottom: 1px solid #888;">
                                    <td>Male</td>
                                </tr>
                            }
                            @foreach (var student in Model.Students.Where(s => s.Gender == 'M'))
                            {
                                <tr class="btn-reveal-trigger">
                                    <td class="align-middle white-space-nowrap">@Html.DisplayFor(m => student.FirstName), @Html.DisplayFor(m => student.LastName), @Html.DisplayFor(m => student.MiddleName[0]).</td>
                                    @if (Model.Section.TeacherSubjectSections!.Any())
                                    {
                                        foreach (var subject in Model.Section.TeacherSubjectSections!.Select(tss =>
                                        tss.TeacherSubject.Subject).Distinct())
                                        {
                                            <td class="align-middle white-space-nowrap text-center">
                                                @{
                                                    var score = student.Scores?.FirstOrDefault(sc => sc.TeacherSubject.SubjectId == subject.Id);
                                                    if (score != null)
                                                    {
                                                        @score.FinalGrade_First
                                                    }
                                                    else
                                                    {
                                                        @Html.Raw("<span style='color: #888; font-style: italic;'>N/A</span>")
                                                    }
                                                }
                                            </td>
                                        }
                                    }
                                </tr>
                            }
                            @if (Model.Students.Where(s => s.Gender == 'F').ToList().Count() > 0)
                            {
                                <tr style="border-bottom: 1px solid #888; border-top: 1px solid #888;">
                                    <td>Female</td>
                                </tr>
                            }
                            @foreach (var student in Model.Students.Where(s => s.Gender == 'F'))
                            {
                                <tr class="btn-reveal-trigger">
                                    <td class="align-middle white-space-nowrap">@Html.DisplayFor(m => student.FirstName), @Html.DisplayFor(m => student.LastName), @Html.DisplayFor(m => student.MiddleName[0]).</td>
                                    @if (Model.Section.TeacherSubjectSections!.Any())
                                    {
                                        foreach (var subject in Model.Section.TeacherSubjectSections!.Select(tss =>
                                        tss.TeacherSubject.Subject).Distinct())
                                        {
                                            <td class="align-middle white-space-nowrap text-center">
                                                @{
                                                    var score = student.Scores?.FirstOrDefault(sc => sc.TeacherSubject.SubjectId == subject.Id);
                                                    if (score != null)
                                                    {
                                                        @score.FinalGrade_First
                                                    }
                                                    else
                                                    {
                                                        @Html.Raw("<span style='color: #888; font-style: italic;'>N/A</span>")
                                                    }
                                                }
                                            </td>
                                        }
                                    }
                                </tr>
                            }
