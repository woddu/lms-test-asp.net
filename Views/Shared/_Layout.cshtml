                    <li class="nav-item">
                        <div class="row navbar-vertical-label-wrapper mt-3 mb-2">
                            <div class="col-auto navbar-vertical-label">LMS</div>
                            <div class="col ps-0">
                                <hr class="mb-0 navbar-vertical-divider" />
                            </div>
                        </div>

                        <!-- Home -->
                        <a class="nav-link @((Context.Request.Path == "/") ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index" role="button">
                            <div class="d-flex align-items-center">
                                <span class="nav-link-icon"><span class="fas fa-home"></span></span>
                                <span class="nav-link-text ps-1">Home</span>
                            </div>
                        </a>

                        <!-- Privacy -->
