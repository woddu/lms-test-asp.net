        @@media(min-width: 1200px) {
            .navbar-brand.onside {
            display: none !important;
            }
            .navbar-vertical-collapsed .navbar-brand.onside {
            display: block !important;
            }
            .navbar .avatar {
                display: flex;
                align-items: center;
                justify-content: center;
            }
        }

    </style>
</head>

<body>
    <main class="main" id="top">
