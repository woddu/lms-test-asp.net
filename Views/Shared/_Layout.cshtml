                                <div class="d-flex align-items-center">
                                    <span class="nav-link-icon"><span class="fas fa-book"></span></span>
                                    <span class="nav-link-text ps-1">Subjects</span>
                                </div>
                            </a>
                        }

                        @if (User.IsInRole("HeadTeacher") || User.IsInRole("Teacher"))
                        {                            
                            <a class="nav-link @(Context.Request.Path.Value?.ToLower().StartsWith("/grades") == true ? "active" : "")" asp-area="" asp-controller="Grades" asp-action="Index" role="button">
                                <div class="d-flex align-items-center">
                                    <span class="nav-link-icon"><span class="fas fa-clipboard-list"></span></span>
                                    <span class="nav-link-text ps-1">Grades</span>
                                </div>
                            </a>
                        }

                        @if (User.IsInRole("Teacher"))
                        {                            
                            <a class="nav-link @(Context.Request.Path.Value?.ToLower().StartsWith("/advisory") == true ? "active" : "")" asp-area="" asp-controller="Advisory" asp-action="Index" role="button">
                                <div class="d-flex align-items-center">
                                    <span class="nav-link-icon"><span class="fas fa-users"></span></span>
                                    <span class="nav-link-text ps-1">Advisory</span>
                                </div>
                            </a>
                        }
                    </li>

                </ul>
            </div>
          </div>
        
        </nav>

        <div class="content">
            <nav class="navbar navbar-light navbar-glass navbar-top navbar-expand">
                <button class="btn navbar-toggler-humburger-icon navbar-toggler me-1 me-sm-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarVerticalCollapse" aria-controls="navbarVerticalCollapse" aria-expanded="false" aria-label="Toggle Navigation"><span class="navbar-toggle-icon"><span class="toggle-line"></span></span></button>

                <div class="navbar-brand me-1 me-sm-3">
                    <span class="font-sans-serif text-primary">@ViewData["Title"]</span>
                </div>


                <ul class="navbar-nav navbar-nav-icons ms-auto flex-row align-items-center">
                    <li class="nav-item dropdown">
                        <a class="nav-link pe-0 ps-2 d-flex align-items-center" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <div class="avatar avatar-xl me-1">
                                <span class="fas fa-user"></span>
                            </div>
                            <span class="fw-bold">@User.Identity?.Name</span>
                        </a>
                        <div class="dropdown-menu dropdown-caret dropdown-caret dropdown-menu-end py-0" aria-labelledby="navbarDropdownUser">
                        <div class="bg-white dark__bg-1000 rounded-2 py-2">
                            @* <a class="dropdown-item fw-bold text-warning" href="#!"><span class="fas fa-crown me-1"></span><span>Go Pro</span></a> *@
                            @* <div class="dropdown-divider"></div> *@
                            @* <a class="dropdown-item" href="#!">Set status</a> *@
                            <a class="dropdown-item" href="pages/user/profile.html">Profile &amp; account</a>
                            @* <a class="dropdown-item" href="#!">Feedback</a> *@
                            <div class="dropdown-divider"></div>
                            @* <a class="dropdown-item" href="pages/user/settings.html">Settings</a> *@
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button  type="submit" class="dropdown-item">Logout</button>
                            </form>                            
                        </div>
                        </div>
                    </li>   
                </ul>
            </nav>
        
            @RenderBody()
        </div>

      </div>
    </main>
    
    
